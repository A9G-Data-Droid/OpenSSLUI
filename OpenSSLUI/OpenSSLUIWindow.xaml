                    <ComboBoxItem ContentStringFormat="512">512</ComboBoxItem>
                    <ComboBoxItem ContentStringFormat="1024">1024</ComboBoxItem>
                    <ComboBoxItem ContentStringFormat="2048">2048</ComboBoxItem>
                </ComboBox>
            </Grid>
